platform :ios, '13.4'

def addModule(name)

pod name, :path => 'DeveloperPods/' + name + '/', :testspecs => ['Tests'] 

end

target 'Weather' do
  use_frameworks!

  addModule 'App'
  addModule 'Core'
  addModule 'Design'
  addModule 'FastDI'
  addModule 'Utils'
  addModule 'CitySearchUserStory'
  addModule 'MainScreen'
  addModule 'WeatherUserStory'


  target 'WeatherTests' do
  end

  target 'WeatherUITests' do
  end

end
